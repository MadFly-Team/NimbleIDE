{
  "configurations": {
    "C# Debug": {
      "adapter": "netcoredbg",
      "configuration": {
        "request": "launch",
        "program": "${workspaceFolder}/bin/Debug/net7.0/imageM33CRCGenerator.dll",
        "args": ["./Ibberton.bin", "0x10000"],
        "cwd": "${workspaceFolder}/bin/Debug/net7.0/",
        "stopOnEntry": true,
        "externalConsole": true,
        "name": "Launch .NET Core Console App",
        "pipeTransport": {
          "pipeCwd": "${workspaceFolder}",
          "pipeProgram": "lldb",
          "pipeArgs": [
            "-o",
            "br set -f Program.cs -l 10",
            "-o",
            "run --project ${workspaceFolder}/imageM33CRCGenerator.csproj"
          ],
          "debuggerPath": "c:/Program Files/LLVM/bin"
        }
      }
    }
  }
}
